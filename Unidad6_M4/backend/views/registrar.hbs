

<form id="login" action="/registrar" method="POST">
  <div class="container_form">
    <div class="mb-3">
      <label for="techid" class="form-label">Nuevo E-mail</label>
      <input type="text" class="form-control" id="mail" name="email" aria-describedby="emailHelp">
    </div>
    <div class="mb-3">
      <label for="techid_pass" class="form-label">Password</label>
      <input type="password" class="form-control" id="password" name="password">
    </div>
    <div class="submit">
      <button type="submit" class="btn btn-primary">Registrar</button>
    </div>
  </div>
</form>

<div class="alerta">
{{#if signupMessage}}
{{signupMessage}}
{{/if}}
</div>