<div class="tarjeta">
    <p>Bienvenido a tus Noticias {{user.email}} </p>
    <div class="tarjeta">
        <a href="notes/add"><button>Crear</button></a>
    </div>
 </div>


<div class="row">
    {{#each notes}}
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title d-flex justify-content-between align-items-center">
                    {{ title }} <a href="/notes/edit/{{_id}}"><i class="fas fa-edit"></i></a>
                </h4>
                <p>{{ description }} </p>
                <!-- DELETE REQUEST -->
                <form action="/notes/delete/{{_id}}?_method=DELETE" method="POST">
                    <input type="hidden" name="_method" value="DELETE">
                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                </form>
            </div>
        </div>
    </div>
    {{else}}
    <div class="card mx-auto">
        <div class="card-body">
            <h4>Hello {{user.email}}</h4>
            <p clsss="lead">There are not Notes yet.</p>
            <a href="/notes/add" class="btn btn-success btn-blockq">Create One!</a>
        </div>
    </div>
    {{/each}}
</div>